<h1>Listing articles</h1>

<%= link_to 'Нова стаття', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th
    <th colspan = "3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Переглянути', article_path(article) %></td>
      <td><%= link_to 'Редагувати статтю', edit_article_path(article) %></td>
      <td><%= link_to 'Видалити', article_path(article),
              method: :delete,
              data: { confirm: 'Справді видалити???' } %></td>
    </tr>
  <% end %>
</table>